<h1><%= @topic.name %></h1>
 
<%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
<%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: {confirm: 'Are you sure you want delete'} %>
 
<div class="row">
    <div class="col-md-8">
        <p class="lead"><%= @topic.description %></p>
        <% @topic.posts.each do |post| %>
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading">
                        <%= link_to post.title, topic_post_path(@topic, post) %>
                    </h4>
                    <small>
                        submitted <%= time_ago_in_words(post.created_at) %> ago <br>
                        <%= post.comments.count %> Comments
                    </small>
                </div>
            </div>
        <% end %>
        <% @topic.sponsor_posts.each do |p| %>
            <div class="media">
                <div class="media-body">
                    <h2 class="media-heading">
                        <%= link_to p.title, topic_sponsorpost_path(@topic, p) %>
                    </h2>
                </div>
            </div>
        <% end %>
   </div>
   <div class="col-md-4">
       <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
       <%= link_to "New Sponsor Post", new_topic_sponsorpost_path(@topic), class: 'btn btn-success' %>
   </div>
</div>