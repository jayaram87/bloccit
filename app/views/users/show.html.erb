<div class="row">
    <div class="col-md-8">
        <div class="media">
            <br />
            <% avatar_url = @user.avatar_url(128) %>
            <% if avatar_url %>
                <div class="media-left">
                    <%= image_tag avatar_url, class: 'media-object' %>
                </div>
            <% end %>
            <div class="media-body">
                <h2 class="media-heading"><%= @user.name %></h2>
                <small>
                    <%= pluralize(@user.posts.count, 'post') %>,
                    <%= pluralize(@user.comments.count, 'comment') %>
                </small>
            </div>
        </div>
    </div>
</div>
 
<h2>Posts</h2>
<% if has_posts?(@user) %>
    <%= render @user.posts %>
<% else %>
    <small><%= "#{@user.name} has not submitted any posts yet" %></small>
<% end %>
<h2>Comments</h2>
<% if has_comments?(@user) %>
    <%= render @user.comments %>
<% else %>
    <small><%= "#{@user.name} has not submitted any comments yet" %></small>
<% end %>

<h2>Favorited Post</h2>
<% @user.favorites.each do |favorite| %>
    <br />
    <small><%= link_to "#{favorite.post.title}", topic_post_path(topic_id: favorite.post.topic.id, id: favorite.post.id) %></small>
    <% avatar_url = @user.avatar_url(40) %>
    <% if avatar_url %>
        <div class="media-left">
            <%= image_tag avatar_url, class: 'media-object' %>
        </div>
    <% end %>
    <%= render partial: 'votes/voter', locals: {post: favorite.post} %>
    <p6><%= "Nbr of comments: #{favorite.post.comments.count}" %></p6>
<% end %>
        
