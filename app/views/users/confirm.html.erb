<h1>Sign Up Confirmation</h1>
<h2>Are you sure these values are correct?</h2>

<div class="col-md-4">
    <h4>Email: <%= @user.email %></h4>
    <h4>Name: <%= @user.name %></h4>
    <%= button_to "Yes", {controller: "users", action: "create", params: params}, class: 'btn btn-success' %>
    <%= button_to "No", {controller: "users", action: "new"}, class: 'btn btn-danger', method: 'get' %>
</div>